params {
    // output_dir = "${launchDir}/test/output"
    work_dir = '/scratch'
    save_intermediate_files = true
    project_id = 'TCEB1'
    multi_sample_calling = false

    align_DNA {
        enable_spark = true
        mark_duplicates = true
        subworkflow_cpus = 8
        reference_fasta_bwa = '/hot/ref/tool-specific-input/BWA-MEM2-2.2.1/GRCh38-BI-20160721/index/genome.fa'
        aligner = ['BWA-MEM2']
    }

    params.align_DNA.metapipeline_arg_string = ''
    params.align_DNA.each{ k, v ->
        params.align_DNA.metapipeline_arg_string = params.align_DNA.metapipeline_arg_string + "--${k} ${v} "
    }

    input_csv = "${launchDir}/test/test-align-DNA/input.csv"
}
