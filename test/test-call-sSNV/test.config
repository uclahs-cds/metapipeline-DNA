params {
    work_dir = '/scratch'
    save_intermediate_files = true
    patient = 'GZLUCPTA000001'
    project_id = 'LUAD0000034'

    multi_sample_calling = false

    call_sSNV {
        subworkflow_cpus = 8
        algorithm = ['somaticsniper', 'strelka2', 'mutect2']
        reference = '/hot/software/pipeline/metapipeline-DNA/Nextflow/development/germline-somatic/downsampled_data/genome/genome.fa'
        exome = false
        call_region = "${launchDir}/test/test-call-sSNV/strelka2_call_region.bed.gz"
        intervals = "${launchDir}/test/test-call-sSNV/intervals.list"
        germline_resource_gnomad_vcf = '/hot/ref/tool-specific-input/GATK/GRCh38/af-only-gnomad.hg38.vcf.gz'
    }

    params.call_sSNV.metapipeline_arg_string = ''
    params.call_sSNV.each{ k, v ->
        if (k != 'algorithm') {
            params.call_sSNV.metapipeline_arg_string = params.call_sSNV.metapipeline_arg_string + "--${k} ${v} "
        }
    }

    input_csv = "${launchDir}/test/test-call-sSNV/input.csv"
}
